<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
			<section class="user_info">
				<h1>
					<%= gravatar_for @user %>
					<%= @user.name %>
				</h1>
			</section>
			<section class="stats">
      			<%= render 'shared/stats' %>
    		</section>
    		<%= render 'follow_form' if signed_in? %>
	</aside>

	<div class="col-md-8"> 
		
		<% if @user.entries.any? %> 
			<h1>Entries (<%= @user.entries.count %>)</h1>
			<ol class="entries">
				<%= render @entries %>
			</ol>
			<%= will_paginate @entries %>
		<% end %>
	</div>
</div>